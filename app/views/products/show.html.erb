<h1><%= "#{@product.name} (#{@product.code})" %></h1>
<p>
  <%= @product.description %>
  <br>
  Price: <%= humanized_money_with_symbol @product.price %>
  <%= form_with url: cart_items_path(product_id: @product.id), local: true, html: {method: url_method(cart: current_cart, product_id: @product.id)} do |form| %>
    <%= form.select :quantity, (1..5) %>
    <%= form.submit("Add to cart", name: nil) %>
  <% end %>
</p>

<%= link_to "back", :back %>
